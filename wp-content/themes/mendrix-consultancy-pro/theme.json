{
  "$schema": "https://schemas.wp.org/wp/6.6/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "custom": {
      "links": {
        "color": "var(--wp--preset--color--primary)",
        "hover": "var(--wp--preset--color--accent)"
      },
      "radius": {
        "sm": "4px",
        "md": "8px",
        "lg": "16px"
      },
      "shadow": {
        "soft": "0 8px 24px rgba(0,0,0,.08)"
      },
      "gradients": {
        "brand-sweep": "linear-gradient(135deg,#dc0000 0%,#dd0000 100%)"
      }
    },
    "color": {
      "defaultPalette": false,
      "palette": [
        { "slug": "primary", "name": "Primary", "color": "#dc0000" },
        { "slug": "accent", "name": "Accent", "color": "#dd0000" },
        { "slug": "foreground", "name": "Body Text", "color": "#636869" },
        { "slug": "background", "name": "Background", "color": "#ffffff" },
        { "slug": "muted", "name": "Muted", "color": "#f7f7f7" },
        { "slug": "ink", "name": "Ink", "color": "#1f1f1f" },
        { "slug": "slate", "name": "Slate", "color": "#2f3033" },
        { "slug": "stone", "name": "Stone", "color": "#d5d7d9" },
        { "slug": "success", "name": "Success", "color": "#1b9a59" },
        { "slug": "warning", "name": "Warning", "color": "#f39c12" },
        { "slug": "info", "name": "Info", "color": "#0f6fc6" }
      ],
      "gradients": [
        { "slug": "brand-sweep", "name": "Brand Sweep", "gradient": "linear-gradient(135deg,#dc0000 0%,#dd0000 100%)" }
      ]
    },
    "layout": {
      "contentSize": "720px",
      "wideSize": "1200px"
    },
    "spacing": {
      "blockGap": true,
      "margin": true,
      "padding": true,
      "units": ["px","em","rem","vh","vw","%"],
      "spacingScale": {
        "step": 1.25,
        "unit": "rem"
      }
    },
    "typography": {
      "dropCap": false,
      "fluid": {
        "minFontSize": "0.9rem",
        "maxFontSize": "1.1rem"
      },
      "fontFamilies": [
        {
          "slug": "inter",
          "name": "Inter",
          "fontFamily": "'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif"
        },
        {
          "slug": "playfair-display",
          "name": "Playfair Display",
          "fontFamily": "'Playfair Display', Georgia, 'Times New Roman', serif"
        }
      ],
      "fontSizes": [
        { "slug": "xs", "name": "XS", "size": "12px" },
        { "slug": "sm", "name": "SM", "size": "14px" },
        { "slug": "base", "name": "Base", "size": "16px" },
        { "slug": "lg", "name": "LG", "size": "18px" },
        { "slug": "xl", "name": "XL", "size": "22px" },
        { "slug": "2xl", "name": "2XL", "size": "28px" },
        { "slug": "3xl", "name": "3XL", "size": "36px" },
        { "slug": "4xl", "name": "4XL", "size": "48px" },
        { "slug": "5xl", "name": "5XL", "size": "60px" },
        { "slug": "6xl", "name": "6XL", "size": "72px" }
      ],
      "lineHeight": true,
      "textDecoration": true,
      "textTransform": true
    },
    "blocks": {
      "core/button": {
        "border": { "radius": "var(--wp--custom--radius--md)" },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "#ffffff"
        },
        "typography": {
          "fontWeight": "600",
          "textTransform": "none"
        }
      },
      "core/heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--playfair-display)",
          "letterSpacing": "-0.015em"
        }
      },
      "core/navigation": {
        "typography": {
          "fontSize": "16px",
          "fontWeight": "600"
        },
        "spacing": {
          "blockGap": "1.5rem"
        }
      },
      "core/quote": {
        "color": {
          "border": {
            "top": "var(--wp--preset--color--primary)"
          }
        }
      },
      "core/table": {
        "border": {
          "radius": "var(--wp--custom--radius--sm)"
        }
      }
    },
    "useOpenTypeFeatures": true
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--foreground)"
    },
    "elements": {
      "button": {
        "border": {
          "radius": "var(--wp--custom--radius--md)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--inter)",
          "fontWeight": "600"
        }
      },
      "heading": {
        "color": {
          "text": "var(--wp--preset--color--slate)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--playfair-display)",
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--custom--links--color)"
        }
      }
    },
    "spacing": {
      "blockGap": "1.75rem"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "fontSize": "16px",
      "lineHeight": "1.65"
    }
  },
  "templateParts": [
    { "name": "header", "title": "Header", "area": "header" },
    { "name": "footer", "title": "Footer", "area": "footer" },
    { "name": "nav", "title": "Navigation", "area": "uncategorized" }
  ]
}
