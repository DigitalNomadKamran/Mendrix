{
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "layout": {
      "contentSize": "720px",
      "wideSize": "1200px"
    },
    "color": {
      "defaultPalette": false,
      "palette": [
        { "slug": "primary",    "name": "Primary Red",     "color": "#dc0000" },
        { "slug": "accent",     "name": "Accent Red",      "color": "#dd0000" },
        { "slug": "foreground", "name": "Body Text",       "color": "#636869" },
        { "slug": "background", "name": "Background",      "color": "#ffffff" },
        { "slug": "muted",      "name": "Muted Section",   "color": "#f7f7f7" },
        { "slug": "white",      "name": "White",           "color": "#ffffff" },
        { "slug": "black",      "name": "Black",           "color": "#000000" }
      ]
    },
    "spacing": {
      "units": ["px","%","em","rem","vh","vw"],
      "spacingScale": { "step": 2, "unit": "rem" },
      "blockGap": true,
      "margin": true,
      "padding": true,
      "customSpacing": true
    },
    "typography": {
      "fluid": true,
      "lineHeight": true,
      "dropCap": false,
      "fontFamilies": [
        {
          "slug": "inter",
          "name": "Inter",
          "fontFamily": "\"Inter\", system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, \"Helvetica Neue\", Arial, \"Noto Sans\", sans-serif"
        },
        {
          "slug": "playfair-display",
          "name": "Playfair Display",
          "fontFamily": "\"Playfair Display\", Georgia, \"Times New Roman\", Times, serif"
        }
      ],
      "fontSizes": [
        { "slug": "xs",  "name": "XS",  "size": "12px" },
        { "slug": "sm",  "name": "SM",  "size": "14px" },
        { "slug": "base","name": "Base","size": "16px" },
        { "slug": "lg",  "name": "LG",  "size": "18px" },
        { "slug": "xl",  "name": "XL",  "size": "20px" },
        { "slug": "2xl", "name": "2XL", "size": "24px" },
        { "slug": "3xl", "name": "3XL", "size": "30px" },
        { "slug": "4xl", "name": "4XL", "size": "36px" },
        { "slug": "5xl", "name": "5XL", "size": "48px" },
        { "slug": "6xl", "name": "6XL", "size": "60px" }
      ]
    },
    "custom": {
      "links": {
        "color": "var(--wp--preset--color--primary)",
        "hover": "var(--wp--preset--color--accent)"
      },
      "radius": { "sm": "4px", "md": "8px", "lg": "16px" },
      "shadow": { "soft": "0 2px 10px rgba(0,0,0,.06)" }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--foreground)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "lineHeight": "1.65"
    },
    "elements": {
      "link": {
        "color": { "text": "var(--wp--custom--links--color)" }
      },
      "h1": { "typography": { "fontFamily": "var(--wp--preset--font-family--playfair-display)", "fontWeight": "700", "lineHeight": "1.15" } },
      "h2": { "typography": { "fontFamily": "var(--wp--preset--font-family--playfair-display)", "fontWeight": "700", "lineHeight": "1.2" } },
      "h3": { "typography": { "fontFamily": "var(--wp--preset--font-family--playfair-display)", "fontWeight": "600" } }
    },
    "blocks": {
      "core/site-title": { "typography": { "fontFamily": "var(--wp--preset--font-family--playfair-display)", "fontWeight": "700" } },
      "core/navigation": { "typography": { "fontSize": "16px", "fontWeight": "600" } },
      "core/button": {
        "border": { "radius": "var(--wp--custom--radius--md)" },
        "color": { "background": "var(--wp--preset--color--primary)", "text": "#ffffff" },
        "typography": { "fontWeight": "600" }
      }
    }
  },
  "templateParts": [
    { "name": "header", "title": "Header", "area": "header" },
    { "name": "footer", "title": "Footer", "area": "footer" }
  ]
}
